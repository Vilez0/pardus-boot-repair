#!/usr/bin/env bash
while [[ ! -b /dev/$disk ]] ; do
    echo $(ls /sys/block/* | grep "[0-9]$")
    echo -n "partition >>> "
    read disk
done
fs=$(blkid | grep /dev/$disk | sed "s/.*TYPE=\"//g;s/\".*//g")

source /usr/bin/pardus-open-luks-lvm

if [[ "$fs" == "ext4" ]] ; then
    yes "" | fsck.ext4 -f -y /dev/$disk

else
    yes "" | fsck.$fs /dev/$disk
fi