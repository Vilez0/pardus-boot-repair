#!/usr/bin/env bash
while [[ ! -b /dev/$disk ]] ; do
    echo $(ls /sys/block/* | grep "[0-9]$")
    echo -n "partition >>> "
    read disk
done
type=$(blkid | grep /dev/$disk | sed "s/.*TYPE=\"//g;s/\".*//g")
if [[ "$type" == "ext4" ]] ; then
    yes "" | fsck.ext4 -f -y /dev/$disk

else
    yes "" | fsck.$type /dev/$disk
fi